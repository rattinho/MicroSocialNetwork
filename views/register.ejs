<%- include('modules/header.ejs') %>
<div class="container d-flex flex-column align-items-center justify-content-center bg-transparent" style="height: 90%">
    <img src="images/SocialNasaLogo.png" style="width: 20%; margin-bottom: -50px; z-index: 1; filter: drop-shadow(2px 4px 6px black);"/>
        <form class="form-control pt-4 mt-2" style="width: 50%;" action="/register" method="post">
            <div>
                <label for="exampleFormControlInput1" class="form-label">Username</label>
                <input class="form-control" name="username" type="text" placeholder="Username" aria-label=".form-control-lg example">
            </div>
            <div class="mt-3">
                <label for="exampleFormControlInput1" class="form-label">Foto de Perfil</label>
                <input type="text" name="avatarimg" class="form-control" id="exampleFormControlInput1" placeholder="www.img.com/suaimg.png">
            </div>
            <div class="mt-3">
                <label for="exampleFormControlInput1" class="form-label">Email address</label>
                <input type="email" name="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
            </div>
            <div class="mt-3">
                <label for="exampleFormControlInput1" class="form-label">Senha</label>
                <input class="form-control" name="password" type="password" placeholder="Senha" aria-label=".form-control-lg example">
                <input class="form-control mt-2" name="password_confirm" type="password" placeholder="Repita a senha" aria-label=".form-control-lg example">
            </div>
            <div class="mt-5 mb-2 d-flex flex-column">
                <button type="submit" class="btn btn-secondary">Registrar</button>
            </div>
            <div class="mx-5 mb-2 d-flex flex-column">
                <a href="/" class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover text-center">JÃ¡ tenho conta</a>
            </div>
        </form>
        <span class="mt-1 mb-4">Created By Rattin</span>
</div>
